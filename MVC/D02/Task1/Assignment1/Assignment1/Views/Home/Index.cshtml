@{
    
    ViewBag.Title = "Home Page";
}

<form class="active" action="/Home/ViewDetails">
    <h3> Please enter out this form</h3>


    <table class="table">
       
        <tbody>
            <tr>
                <td class="text-primary">ID</td>
                <td>
                    <input name="id" type="text" class="form-control" />
                </td>
            </tr>
            <tr>
                <td class="text-primary" >Name</td>
                <td>
                    <input name="name" type="text"  class="form-control" />
                </td>
            </tr>
            <tr>
                <td class="text-primary" >Image</td>
                <td>
                    <select class="form-control" name="imgNumber">
                        @{ 
                            foreach (var i in Enumerable.Range(1, 7))
                            {
                                <option value="@i" selected> @i </option>
                            }
                        }
                    </select>
                </td>
            </tr>
        </tbody>
   </table>

    <input class="btn btn-primary text-light" type="submit" value="Submit" /> 
</form>