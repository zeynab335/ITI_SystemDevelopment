<Window x:Class="Ass3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ass3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <ListBox x:Name="lst"  Background="LightPink" DockPanel.Dock="Left" ItemsSource="{x:Static Fonts.SystemFontFamilies}" Width="166" ></ListBox>

        <Border BorderBrush="LightBlue" BorderThickness="4" DockPanel.Dock="Bottom">
            <TextBox x:Name="txt" ></TextBox>
        </Border>

        <StackPanel DockPanel.Dock="Top">
            <Label FontFamily="{Binding ElementName=lst , Path=SelectedItem}" Content="{Binding ElementName=txt , Path=Text }" FontSize="5"></Label>
            <Label FontFamily="{Binding ElementName=lst , Path=SelectedItem}" Content="{Binding ElementName=txt , Path=Text }" FontSize="10"></Label>
            <Label FontFamily="{Binding ElementName=lst , Path=SelectedItem}" Content="{Binding ElementName=txt , Path=Text }" FontSize="15"></Label> 
            <Label FontFamily="{Binding ElementName=lst , Path=SelectedItem}" Content="{Binding ElementName=txt , Path=Text }" FontSize="20"></Label>
        </StackPanel>
    </DockPanel>
</Window>
